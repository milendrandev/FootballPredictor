@using FootballPredictor.Data.Repositories
@model FootballPredictor.Web.ViewModels.Matches.ListOfLeaguesViewModel
<head>
    <style>
        h1 {
            text-align: center;
        }
    </style>
</head>

<h1> Games this week</h1>
<br />

@foreach (var league in Model.Leagues)
{
    <div class="d-flex justify-content-left">
    </div>
    <head>
        <style>
            h2 {
                text-align: center;
            }
        </style>
    </head>

    <h2>@league.LeagueName</h2>
    <table class="table table-hover table-bordered mb-9">
        <thead>
            <tr>
                <th scope="col">Home</th>
                <th scope="col"></th>
                <th scope="col">Away</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var match in league.Matches)
            {

                <tr class="table-light table-bordered mb-6">
                    <td>@match.HomeName</td>
                    <td> : </td>
                    <td>@match.AwayName</td>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <td><a class="btn btn-block btn-primary mb-3 text-white mb-3" href="/Predictions/Create?id=@match.Id ">Create a prediction</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br />
}

