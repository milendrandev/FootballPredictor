@model FootballPredictor.Web.ViewModels.Standings.LeagueViewModel
<h1>@Model.Name</h1>

<div>
        <style>
            table {
                counter-reset: rowNumber;
            }

                table tr > td:first-child {
                    counter-increment: rowNumber;
                }

                table tr td:first-child::before {
                    content: counter(rowNumber);
                    min-width: 1em;
                    margin-right: 0.5em;
                }
        </style>
</div>
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Rank</th>
                <th scope="col">Team</th>
                <th scope="col">Played Matches</th>
                <th scope="col">Wins</th>
                <th scope="col">Draws</th>
                <th scope="col">Looses</th>
                <th scope="col">Scored Goals</th>
                <th scope="col">Conceded Goals</th>
                <th scope="col">Points</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in this.Model.Teams)
            {

                <tr class="table-light">
                    <th scope="row"><a asp-controller="Teams" asp-action="Team" asp-route-id="@team.Id">@team.Name</a></th>
                    <td>@team.MatchesPlayed</td>
                    <td>@team.Wins</td>
                    <td>@team.Draws</td>
                    <td>@team.Looses</td>
                    <td>@team.ScoredGoals</td>
                    <td>@team.ConcededGoals</td>
                    <td>@team.Points</td>
                </tr>
            }
        </tbody>
    </table>
</div>

