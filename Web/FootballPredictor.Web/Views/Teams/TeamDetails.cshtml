@model FootballPredictor.Web.ViewModels.Teams.TeamDetailViewModel

<h1> @this.Model.Name</h1>
<div class="d-flex justify-content-center">
    <a class="btn btn-block btn-primary text-white mb-3" href="/Teams/Squad?id=@Model.Id ">Team Squad</a>
</div>
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Home Team</th>
                <th scope="col">Result</th>
                <th scope="col">Away Team</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var match in this.Model.Matches)
            {
                <tr class="table-light">
                    @if (match.HomeName == Model.Name)
                    {
                    <th scope="row">@match.HomeName</th>
                        <td> @match.HomeGoals : @match.AwayGoals</td>
                        <td> @match.AwayName</td>
                    }
                    else
                    {
                        <td>@match.HomeName</td>
                        <td> @match.HomeGoals : @match.AwayGoals</td>
                        <th scope="row">@match.AwayName</th>

                    }
                </tr>
            }
        </tbody>
    </table>
</div>
